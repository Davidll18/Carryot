<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projectiot.MainActivity"
    android:fitsSystemWindows="true">

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start" />

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"> <!-- Cambiar wrap_content por match_parent -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"> <!-- Usar wrap_content en ConstraintLayout -->

            <!-- Toolbar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/generaltoolbar_adminrest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- RecyclerView para Pedidos Pendientes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPedidosPendientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- RecyclerView para Ganancia Total -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGananciaEstadistica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewPedidosPendientes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- RecyclerView para Platos Populares -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlatosPopulares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/recyclerGananciaEstadistica"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
