<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Imagen a la izquierda -->
    <ImageView
        android:id="@+id/imgFood5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/lomo" />

    <!-- Contenedor para las líneas de texto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del plato -->
        <TextView
            android:id="@+id/tvNameDishes5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOMO SALTADO"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Estado del pedido -->
        <TextView
            android:id="@+id/type5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orange"
            android:text="Almuerzo"
            android:textColor="#FF5722"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Descripción del pedido -->
        <TextView
            android:id="@+id/tvStock5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 50 und"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Contenedor para el icono de ojo y el precio -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/optionMenu5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/more_icon"
            android:clickable="true"
            android:focusable="true" />

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 24.00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
