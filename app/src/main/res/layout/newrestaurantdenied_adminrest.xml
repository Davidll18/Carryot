<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="70dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡AGREGA TU RESTAURANTE!"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/gray_box_background"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_gravity="center">

            <!-- Imagen -->
            <ImageView
                android:layout_width="108dp"
                android:layout_height="91dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/warning_icon"
                android:layout_gravity="center"/>  <!-- Cambia esto por tu ícono -->

            <!-- Texto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El código R.U.C. y Código Sanitario son incorrectos. Por favor, verificar."
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>


        <!-- Botones: Atras y Siguiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">


            <!-- Botón Siguiente -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reintentar"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/red_app"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>