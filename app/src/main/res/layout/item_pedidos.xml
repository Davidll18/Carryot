<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen a la izquierda -->
        <ImageView
            android:id="@+id/imgFood1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/lomo"
            android:contentDescription="Imagen del pedido" />

        <!-- Contenedor para las líneas de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Número de orden y estado -->
            <TextView
                android:id="@+id/tvOrderNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOL1234"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Estado del pedido -->
            <TextView
                android:id="@+id/tvOrderStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:background="@drawable/background_orange"
                android:textColor="#FF5722"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Descripción del pedido -->
            <TextView
                android:id="@+id/tvOrderDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1x Lomo Saltado\n1x Inka Cola\nMás"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>

        <!-- Contenedor para el icono de ojo y el precio -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Icono de ojo -->
            <ImageView
                android:id="@+id/imgViewDetails1"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/eye_icon"
                android:contentDescription="Ver detalles del pedido" />

            <!-- Precio -->
            <TextView
                android:id="@+id/tvPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="S/ 85.00"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
